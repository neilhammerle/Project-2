<form id="signup-form" class="form-login card " toggle="off">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>
        <p></a>
        </p>
      </div>

      <div class="form-label-group">
        <input type="name" id="signupInputFullName" class="form-control" placeholder="John Smith" required autofocus>
        <label for="inputEmail">Name</label>
      </div>

      <div class="form-label-group">
        <input type="email" id="signupInputEmail" class="form-control" placeholder="example@email.com" required
          autofocus>
        <label for="inputEmail">Email address</label>
      </div>

      <div class="form-label-group">
        <input type="username" id="signupInputUserName" class="form-control" placeholder="j.smith" required autofocus>
        <label for="inputEmail">Username</label>
      </div>

      <div class="form-label-group">
        <input type="password" id="signupInputPassword" class="form-control" placeholder="********" required>
        <label for="inputPassword">Password</label>
      </div>

      <div class="form-label-group">
        <input type="email" id="signupInputPasswordConfirm" class="form-control" placeholder="********" required>
        <label for="inputPassword">Confirm Password</label>
      </div>

      <button id="sign-up-submit-btn" class="btn btn-lg btn-primary btn-block" type="submit">log in</button>
      <div class="space"></div>
    </div>
  </div>
</form>